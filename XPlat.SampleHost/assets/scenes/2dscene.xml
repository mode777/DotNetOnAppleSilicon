<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<scene version="1.0" template="2d">
    <import assembly="XPlat.SampleHost" />
    <resources>
        <atlas name="space" src="../sprites/space" width="1024" height="1024"/>
        <script name="ship" src="../scripts/ship_control.lua" watch="true" />
        <script name="meteor" src="../scripts/meteor.lua" watch="true" />
    </resources>
    
    <node name="root">

        <!-- <node name="camera"><components><camera2d /></components></node> -->
        
        <node name="player" translate="200, 200, 0">
            <components>
                <lua res="ship"/>
                <collider2d mode="active" weight="1">
                    <!-- <capsule a="0,-30" b="0,10" r="15" /> -->
                    <circle p="0,-15" r="35" />
                </collider2d>
            </components>
            <node name="player_sprite" translate="-50,-50">
                <components>
                    <sprite res="space:playerShip1_red" />
                </components>
            </node>
        </node>

        <node name="meteor" translate="400, 400, 0">
            <components>
                <collider2d mode="active" weight="0">
                    <circle p="0,-15" r="35" />
                </collider2d>
                <lua res="meteor" />
            </components>
            <node name="meteor_sprite" translate="-50,-50">
                <components>
                    <sprite res="space:meteorBrown_big1" />
                </components>
            </node>
        </node>

        <node name="meteor2" translate="400, 100" rotate="0,0,90">
            <components>
                <collider2d mode="active" weight="0">
                    <circle p="0,-15" r="35" />
                </collider2d>
                <lua res="meteor" />
            </components>
            <node name="meteor_sprite" translate="-50,-50">
                <components>
                    <sprite res="space:meteorBrown_big1" />
                </components>
            </node>
        </node>

        <node name="meteor3" translate="100, 100" rotate="0,0,180">
            <components>
                <collider2d mode="active" weight="0">
                    <circle p="0,-15" r="35" />
                </collider2d>
                <lua res="meteor" />
            </components>
            <node name="meteor_sprite" translate="-50,-50">
                <components>
                    <sprite res="space:meteorBrown_big1" />
                </components>
            </node>
        </node>

        <node name="meteor4" translate="100, 400" rotate="0,0,270">
            <components>
                <collider2d mode="active" weight="0">
                    <circle p="0,-15" r="35" />
                </collider2d>
                <lua res="meteor" />
            </components>
            <node name="meteor_sprite" translate="-50,-50">
                <components>
                    <sprite res="space:meteorBrown_big1" />
                </components>
            </node>
        </node>

    </node>
</scene>